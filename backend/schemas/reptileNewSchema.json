  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 30,
      "minLength": 2
    },
    "species": {
      "type": "string"
    },
    "subspecies": {
      "type": "string"
    },
    "birthday": {
      "type": "string"
    },
    "imgUrl": {
      "type": "string"
    },
